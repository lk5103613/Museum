<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_b2"
    android:paddingBottom="@dimen/margin"
    android:paddingLeft="@dimen/margin_b6"
    android:paddingRight="@dimen/margin_b6" >

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="wrap_content"
        android:layout_height="182dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/intro_text"
        android:layout_marginTop="@dimen/margin_s4"
        android:text="纪念品介绍"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_s1"
        android:textColor="@color/intro_text"
        android:lineSpacingExtra="@dimen/margin_s3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/intro_text"
        android:layout_marginTop="@dimen/margin_s4"
        android:text="尺寸大小"
        android:textSize="@dimen/text_size_s1" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_s1"
        android:textColor="@color/intro_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_b3"
        android:text="参考售价"
        android:textSize="@dimen/text_size_s1"
        android:textColor="@color/intro_text" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_s1"
        android:textColor="@color/intro_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_b1"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_s3"
            android:text="请至1F纪念品商店购买"
            android:textSize="@dimen/text_size_s2"
        android:textColor="@color/intro_text" />
    </LinearLayout>

</LinearLayout>